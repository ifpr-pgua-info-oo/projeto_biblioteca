<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="5.0" stylesheets="@../css/estilo_cadastro_revista.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ifpr.pgua.eic.biblioteca.telas.CadastroRevista">

    <padding>
        <!--
        <Insets right="8.0" left="8.0" bottom="8.0" top="8.0"/>-->
        <Insets topRightBottomLeft="8.0" />
    </padding>

    <Label fx:id="lbTitulo" text="Título:" />
    <TextField fx:id="tfTitulo" />

    <Label text="Editora:" />
    <TextField fx:id="tfEditora" /> 

    <Label text="Número:" />
    <TextField fx:id="tfNumero" />
    
    <Label text="Ano de Publicação:" />
    <TextField fx:id="tfAnoPublicacao" />
    
    <Label text="Número de Páginas:" />
    <TextField fx:id="tfPaginas" />

    <HBox spacing="5.0">
        <Button onAction="#cadastrar" text="Adicionar" />
        <Button onAction="#limpar" styleClass="botao-limpar" text="Limpar" />
    </HBox>
    
</VBox>
